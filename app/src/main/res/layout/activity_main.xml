<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <de.dertyp7214.rboard_themecreator.keyboard.Keyboard
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/keyboard"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </de.dertyp7214.rboard_themecreator.keyboard.Keyboard>
    <Switch
            android:text="Keyborder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/border"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/keyboard"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/rv"/>
</LinearLayout>